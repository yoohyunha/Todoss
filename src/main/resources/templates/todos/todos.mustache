{{>layouts/header}}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <button onclick="location.href='/todos?date={{prevMonth}}'" class="btn btn-secondary-modern btn-sm me-3">
            <i class="bi bi-chevron-left"></i>
            </button>
            <h2 class="fw-bold mb-0 text-primary-modern">{{currentYear}}년 {{currentMonth}}월</h2>
            <button onclick="location.href='/todos?date={{nextMonth}}'" class="btn btn-secondary-modern btn-sm ms-3">
            <i class="bi bi-chevron-right"></i>
            </button>
        </div>
        <a href="/friends" class="btn btn-primary-modern" title="친구 관리">
            <i class="bi bi-person-plus me-1"></i>친구 관리
        </a>
    </div>

    <div class="row g-4">
        <!-- 개인 투두리스트 -->
        <div class="col-lg-4">
            <div class="card-modern p-4" style="min-height:400px;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="fw-bold mb-0 d-flex align-items-center text-primary-modern">
                        <i class="bi bi-calendar-check me-2"></i>내 할 일
                    </h4>
                    <div class="d-flex align-items-center gap-3">
                        <div class="progress-circle" style="--progress: calc({{doneCount}} / {{totalCount}} * 360deg);">
                            <span class="progress-text">{{doneCount}}/{{totalCount}}</span>
                        </div>
                        <button class="btn btn-primary-modern btn-sm rounded-pill" data-bs-toggle="modal" data-bs-target="#addTodoModal">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    </div>
                </div>

                <div class="text-center mb-4">
                    <h5 class="fw-bold text-secondary-modern">{{selectedDate}}</h5>
                </div>

                <div class="todo-list">
                    {{#todos}}
                        <div class="todo-item d-flex align-items-center">
                            <div class="form-check me-3">
                                <input class="form-check-input" type="checkbox"
                                       {{#completed}}checked{{/completed}}
                                       onclick="toggleTodo({{id}}, event)">
                            </div>
                            <span class="flex-grow-1 {{#completed}}text-decoration-line-through text-muted{{/completed}}">
                                {{content}}
                            </span>
                            <div class="d-flex align-items-center gap-2">
                                {{#completed}}
                                    <i class="bi bi-check-circle-fill" style="color: var(--success-color);"></i>
                                {{/completed}}
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteTodo({{id}})" title="삭제">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    {{/todos}}
                    {{^todos}}
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-clipboard-x display-4 mb-3" style="color: var(--accent-color);"></i>
                            <p>아직 할 일이 없습니다.<br>새로운 할 일을 추가해보세요!</p>
                        </div>
                    {{/todos}}
                </div>
            </div>
        </div>

        <!-- 공유 투두리스트 -->
        <div class="col-lg-4">
            <div class="card-modern p-4" style="min-height:400px;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="fw-bold mb-0 d-flex align-items-center text-success">
                        <i class="bi bi-people-fill me-2"></i>공유 할 일
                    </h4>
                    <div class="d-flex align-items-center gap-2">
                        <select id="sharedListSelect" class="form-select form-select-sm" style="width: auto;" onchange="loadSharedTodos()">
                            <option value="">리스트 선택</option>
                            {{#sharedLists}}
                                <option value="{{id}}">{{title}}</option>
                            {{/sharedLists}}
                        </select>
                        <button class="btn btn-success btn-sm rounded-pill" data-bs-toggle="modal" data-bs-target="#createSharedListModal">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                        <button id="deleteSharedListBtn" class="btn btn-outline-danger btn-sm rounded-pill" onclick="deleteSharedList()" style="display: none;" title="공유 리스트 삭제">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>

                <div class="text-center mb-4">
                    <h5 class="fw-bold text-secondary-modern">{{selectedDate}}</h5>
                </div>

                <div id="sharedTodoList" class="todo-list">
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-people display-4 mb-3" style="color: var(--success-color);"></i>
                        <p>공유 리스트를 선택해주세요</p>
                    </div>
                </div>

                <div class="mt-3" id="addSharedTodoSection" style="display: none;">
                    <div class="input-group">
                        <input type="text" id="sharedTodoContent" class="form-control" placeholder="공유 할 일 추가">
                        <select id="assignSelect" class="form-select" style="max-width: 120px;">
                            <option value="">공통</option>
                            <option value="{{user.id}}">나</option>
                            <option value="" id="partnerOption">상대방</option>
                        </select>
                        <button class="btn btn-success" onclick="addSharedTodo()">
                            <i class="bi bi-plus"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- 캘린더 -->
        <div class="col-lg-4">
        <div class="card-modern p-4">
            <h5 class="fw-bold mb-3 text-center text-primary-modern">
                <i class="bi bi-calendar3 me-2"></i>캘린더
            </h5>
        <table class="table table-borderless text-center">
            <thead>
            <tr class="text-muted fw-medium">
                <th>일</th><th>월</th><th>화</th><th>수</th><th>목</th><th>금</th><th>토</th>
            </tr>
            </thead>
        <tbody>
            {{#calendarRows}}
            <tr>
                {{#this}}
                    <td>
                    <div class="calendar-day mx-auto
                                        {{#today}}today{{/today}}
                        {{#isSelected}}selected{{/isSelected}}"
                        {{#date}}onclick="window.location.href='/todos?date={{date}}'"{{/date}}>
                        {{day}}
                </div>
                    </td>
                {{/this}}
                </tr>
            {{/calendarRows}}
            </tbody>
            </table>
        </div>
    </div>
</div>

<!-- 친구 목록 -->
<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="card-modern p-4">
            <h5 class="fw-bold mb-3 text-primary-modern">
                <i class="bi bi-people me-2"></i>친구 목록
            </h5>
            <div class="row">
                {{#friends}}
                    <div class="col-md-3 mb-3">
                        <div class="friend-card">
                            <div class="d-flex justify-content-between align-items-center">
                                <form method="get" action="/todos/friend" class="m-0 flex-grow-1">
                                    <input type="hidden" name="userId" value="{{id}}">
                                    <button class="btn w-100 text-start p-0 border-0 bg-transparent d-flex align-items-center friend-btn"
                                            type="submit">
                                        <div class="bg-primary-modern rounded-circle d-flex align-items-center justify-content-center me-3" style="width:40px;height:40px;">
                                            <i class="bi bi-person-fill text-white"></i>
                                        </div>
                                        <span class="fw-medium text-primary-modern">{{nickname}}</span>
                                    </button>
                                </form>
                                <button class="btn btn-outline-danger btn-sm ms-2" onclick="removeFriend({{id}})" title="친구 삭제">
                                    <i class="bi bi-person-dash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                {{/friends}}

                {{^friends}}
                    <div class="col-12 text-center py-4 text-muted">
                        <i class="bi bi-person-plus display-6 mb-2" style="color: var(--accent-color);"></i>
                        <p class="mb-0">친구를 추가해보세요!</p>
                    </div>
                {{/friends}}

                <!-- 친구 요청 -->
                {{#pendingRequests}}
                    <div class="col-md-3 mb-3">
                        <div class="friend-card" style="border-color: var(--warning-color);">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-medium text-primary-modern">{{fromUser.nickname}}</span>
                                <div class="btn-group btn-group-sm">
                                    <form method="post" action="/friends/accept" class="d-inline">
                                        <input type="hidden" name="requestId" value="{{id}}">
                                        <button class="btn btn-success-modern btn-sm" type="submit">
                                            <i class="bi bi-check"></i>
                                        </button>
                                    </form>
                                    <form method="post" action="/friends/reject" class="d-inline">
                                        <input type="hidden" name="requestId" value="{{id}}">
                                        <button class="btn btn-sm"
                                                style="background: var(--danger-color); color: white; border: none;"
                                                type="submit">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/pendingRequests}}
            </div>
        </div>
    </div>
</div>
</div>

<!-- 개인 할 일 추가 모달 -->
<div class="modal fade" id="addTodoModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content border-0 shadow-lg" action="/todos/create" method="post" style="border-radius: 16px;">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold text-primary-modern">
                    <i class="bi bi-plus-circle me-2"></i>새 할 일 추가
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-0">
                <div class="form-floating">
                    <input type="text" class="form-control" name="content" id="todoContent" placeholder="할 일을 입력하세요" required>
                    <label for="todoContent">할 일을 입력하세요</label>
                </div>
                <input type="hidden" name="date" value="{{selectedDate}}">
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary-modern" data-bs-dismiss="modal">취소</button>
                <button type="submit" class="btn btn-primary-modern">
                    <i class="bi bi-plus me-1"></i>추가
                </button>
            </div>
        </form>
    </div>
</div>

<!-- 공유 리스트 생성 모달 -->
<div class="modal fade" id="createSharedListModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 16px;">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold text-success">
                    <i class="bi bi-people me-2"></i>공유 리스트 만들기
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-0">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="sharedListTitle" placeholder="리스트 제목">
                    <label for="sharedListTitle">리스트 제목</label>
                </div>
                <div class="form-floating">
                    <select class="form-select" id="sharedWithSelect">
                        <option value="">친구 선택</option>
                        {{#friends}}
                            <option value="{{id}}">{{nickname}}</option>
                        {{/friends}}
                    </select>
                    <label for="sharedWithSelect">함께할 친구</label>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary-modern" data-bs-dismiss="modal">취소</button>
                <button type="button" class="btn btn-success" onclick="createSharedList()">
                    <i class="bi bi-plus me-1"></i>생성
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    let currentSharedListId = null;
    let currentPartnerUserId = null;
    let sharedListsData = [
        {{#sharedLists}}
            {
                id: {{id}},
                title: '{{title}}',
                createdBy: {{createdBy.id}},
                sharedWith: {{sharedWith.id}},
                createdByName: '{{createdBy.nickname}}',
                sharedWithName: '{{sharedWith.nickname}}'
            },
        {{/sharedLists}}
    ];

    // 개인 투두 토글
    function toggleTodo(id, event) {
        event.stopPropagation();
        const todoItem = event.target.closest('.todo-item');
        todoItem.style.opacity = '0.5';

        fetch('/api/todos/' + id, {
            method: 'PATCH',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({ completed: event.target.checked })
        }).then(() => {
            setTimeout(() => location.reload(), 300);
        }).catch(() => {
            todoItem.style.opacity = '1';
            event.target.checked = !event.target.checked;
        });
    }

    // 개인 투두 삭제
    function deleteTodo(id) {
        if (!confirm('정말 삭제하시겠습니까?')) return;

        fetch('/api/todos/' + id, {
            method: 'DELETE'
        }).then(() => {
            location.reload();
        }).catch(() => {
            alert('삭제에 실패했습니다.');
        });
    }

    // 친구 삭제
    function removeFriend(friendId) {
        if (!confirm('정말 친구를 삭제하시겠습니까?')) return;

        fetch('/api/friends/' + friendId, {
            method: 'DELETE'
        }).then(() => {
            location.reload();
        }).catch(() => {
            alert('친구 삭제에 실패했습니다.');
        });
    }

    // 공유 리스트 생성
    function createSharedList() {
        const title = document.getElementById('sharedListTitle').value.trim();
        const sharedWithId = document.getElementById('sharedWithSelect').value;

        if (!title || !sharedWithId) {
            alert('제목과 친구를 모두 선택해주세요.');
            return;
        }

        const formData = new FormData();
        formData.append('title', title);
        formData.append('sharedWithId', sharedWithId);

        fetch('/api/shared-todos/lists', {
            method: 'POST',
            body: formData
        }).then(response => {
            if (response.ok) {
                document.getElementById('sharedListTitle').value = '';
                document.getElementById('sharedWithSelect').value = '';
                const modal = bootstrap.Modal.getInstance(document.getElementById('createSharedListModal'));
                modal.hide();
                location.reload();
            } else {
                alert('공유 리스트 생성에 실패했습니다.');
            }
        }).catch(() => {
            alert('공유 리스트 생성에 실패했습니다.');
        });
    }

    // 공유 리스트 삭제
    function deleteSharedList() {
        if (!currentSharedListId) return;
        if (!confirm('공유 리스트를 삭제하시겠습니까? 모든 할 일이 함께 삭제됩니다.')) return;

        fetch('/api/shared-todos/lists/' + currentSharedListId, {
            method: 'DELETE'
        }).then(() => {
            location.reload();
        }).catch(() => {
            alert('공유 리스트 삭제에 실패했습니다.');
        });
    }

    // 공유 투두 로드
    function loadSharedTodos() {
        const sharedListId = document.getElementById('sharedListSelect').value;
        const selectedDate = '{{selectedDate}}';

        if (!sharedListId) {
            document.getElementById('sharedTodoList').innerHTML = `
            <div class="text-center py-5 text-muted">
                <i class="bi bi-people display-4 mb-3" style="color: var(--success-color);"></i>
                <p>공유 리스트를 선택해주세요</p>
            </div>
        `;
            document.getElementById('addSharedTodoSection').style.display = 'none';
            document.getElementById('deleteSharedListBtn').style.display = 'none';
            return;
        }

        currentSharedListId = sharedListId;

        // 삭제 버튼 표시 (생성자만)
        const selectedList = sharedListsData.find(list => list.id == sharedListId);
        const currentUserId = {{user.id}};
        if (selectedList && selectedList.createdBy === currentUserId) {
            document.getElementById('deleteSharedListBtn').style.display = 'block';
        } else {
            document.getElementById('deleteSharedListBtn').style.display = 'none';
        }

        fetch(`/api/shared-todos/${sharedListId}?date=${selectedDate}`)
                .then(response => response.json())
                .then(todos => {
                    let html = '';
                    if (todos.length === 0) {
                        html = `
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-clipboard-x display-4 mb-3" style="color: var(--success-color);"></i>
                    <p>공유 할 일이 없습니다.<br>새로운 할 일을 추가해보세요!</p>
                </div>
            `;
                    } else {
                        todos.forEach(todo => {
                            const assignedText = todo.assignedTo ?
                                    `<small class="text-muted">(${todo.assignedTo.nickname})</small>` :
                                    '<small class="text-muted">(공통)</small>';

                            html += `
                    <div class="todo-item d-flex align-items-center shared-todo">
                        <div class="form-check me-3">
                            <input class="form-check-input" type="checkbox"
                                   ${todo.completed ? 'checked' : ''}
                                   onclick="toggleSharedTodo(${todo.id}, event)">
                        </div>
                        <span class="flex-grow-1 ${todo.completed ? 'text-decoration-line-through text-muted' : ''}">
                            ${todo.content} ${assignedText}
                        </span>
                        <div class="d-flex align-items-center gap-2">
                            ${todo.completed ? '<i class="bi bi-check-circle-fill" style="color: var(--success-color);"></i>' : ''}
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteSharedTodo(${todo.id})" title="삭제">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                `;
                        });
                    }
                    document.getElementById('sharedTodoList').innerHTML = html;
                    document.getElementById('addSharedTodoSection').style.display = 'block';

                    // 파트너 정보 설정
                    if (selectedList) {
                        currentPartnerUserId = selectedList.createdBy === currentUserId ?
                                selectedList.sharedWith : selectedList.createdBy;
                        const partnerName = selectedList.createdBy === currentUserId ?
                                selectedList.sharedWithName : selectedList.createdByName;

                        document.getElementById('partnerOption').value = currentPartnerUserId;
                        document.getElementById('partnerOption').textContent = partnerName;
                    }
                });
    }

    // 공유 투두 토글
    function toggleSharedTodo(id, event) {
        event.stopPropagation();
        const todoItem = event.target.closest('.todo-item');
        todoItem.style.opacity = '0.5';

        fetch(`/api/shared-todos/${id}`, {
            method: 'PATCH'
        }).then(() => {
            loadSharedTodos();
        }).catch(() => {
            todoItem.style.opacity = '1';
            event.target.checked = !event.target.checked;
        });
    }

    // 공유 투두 삭제
    function deleteSharedTodo(id) {
        if (!confirm('정말 삭제하시겠습니까?')) return;

        fetch(`/api/shared-todos/${id}`, {
            method: 'DELETE'
        }).then(() => {
            loadSharedTodos();
        }).catch(() => {
            alert('삭제에 실패했습니다.');
        });
    }

    // 공유 투두 추가
    function addSharedTodo() {
        const content = document.getElementById('sharedTodoContent').value.trim();
        const assignedToId = document.getElementById('assignSelect').value || null;
        const selectedDate = '{{selectedDate}}';

        if (!content || !currentSharedListId) return;

        const data = {
            content: content,
            date: selectedDate,
            sharedListId: currentSharedListId,
            assignedToId: assignedToId
        };

        fetch('/api/shared-todos', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify(data)
        }).then(() => {
            document.getElementById('sharedTodoContent').value = '';
            loadSharedTodos();
        }).catch(() => {
            alert('할 일 추가에 실패했습니다.');
        });
    }

    // Enter 키로 공유 투두 추가
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('sharedTodoContent').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                addSharedTodo();
            }
        });
    });
</script>

