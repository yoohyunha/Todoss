{{>layouts/header}}

<div class="container-fluid px-5 py-4">
    <div class="mb-4 d-flex justify-content-between align-items-center">
        <h3 class="fw-bold">{{friend.nickname}}님의 {{year}}년 투두리스트</h3>
        <a href="/todos" class="btn btn-outline-secondary">내 투두리스트로 돌아가기</a>
    </div>

    <!-- 연간 통계 테이블 -->
    <div class="bg-white rounded-4 p-4 mb-4 shadow-sm">
        <table class="table">
            <thead>
            <tr><th>월</th><th>총 할 일</th><th>완료</th><th>미완료</th></tr>
            </thead>
            <tbody>
            {{#months}}
                <tr>
                    <td>{{month}}월</td>
                    <td>{{totalCount}}</td>
                    <td>{{doneCount}}</td>
                    <td>{{unDoneCount}}</td>
                </tr>
            {{/months}}
            </tbody>
        </table>
    </div>

    <!-- 월별 첫 주 달력 -->
    <div class="row g-4">
        {{#months}}
            <div class="col-md-3">
                <h5 class="text-center">{{month}}월</h5>
                <table class="table table-borderless text-center mb-0">
                    <thead>
                    <tr class="text-muted">
                        <th>Su</th><th>Mo</th><th>Tu</th><th>We</th><th>Th</th><th>Fr</th><th>Sa</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#calendarRows}}
                        <tr>
                            {{#this}}
                            <td class="{{#today}}bg-primary text-white rounded-circle{{/today}}{{#isSelected}} border border-primary rounded-circle{{/isSelected}}"
                                {{#date}}onclick="location.href='/todos?date={{date}}'" style="cursor:pointer;"{{/date}}>
                                {{day}}
                                </td>
                            {{/this}}
                        </tr>
                    {{/calendarRows}}
                    </tbody>
                </table>
            </div>
        {{/months}}
    </div>
</div>

{{>layouts/footer}}
